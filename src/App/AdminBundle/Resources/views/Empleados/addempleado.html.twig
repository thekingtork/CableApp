{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "::base.html.twig" %}
{% block dinamico %}
    <h1>Empleados registrados</h1>
    <table class="table table-hover"><!--Inicio Tabla-->
        <tr>
            <td>Nombres</td>
            <td>Apellidos</td>
            <td>Identificacion</td>
            <td>Telefono</td>
            <td>Nombres</td>
            <td>Salario</td>
            <td>Estado</td>
        </tr>
    {% for item in empleados %}
        <tr>
            <td>{{item.nombres}}</td>
            <td>{{item.apellidos}}</td>
            <td>{{item.identificacion}}</td>
            <td>{{item.telefono}}</td>
            <td>{{item.perfil}}</td>
            <td>$ {{item.salario}}</td>
            <td>
                {% if item.activo == 1 %}
                    <span class="glyphicon glyphicon-ok"></span>
                {% else %}
                    <span class="glyphicon glyphicon-remove"></span>
                {% endif %}
            </td>
            <td><a href="{{path('editempleado',{'ind':item.id})}}" class="ajaxsimple"><span class="glyphicon glyphicon-pencil"></span> Editar</a></td>
        </tr>
    {% else %}
        <p class="alert alert-danger">No hay empleados registrados actualmente</p>
    {% endfor %}
    </table><!--*******************Fin Tabla**************-->
    <button class="btn btn-info activar">Nuevo Empleado <span class="glyphicon glyphicon-plus"></span></button>
    <a href="{{path('adminempleados')}}" class="btn btn-info ajaxsimple">Atr&aacute;s</a>
    <div class="elemento" style="display: none;">
        <h1>Registrar Nuevo empleado</h1>
        <form action="{{path('addempleado')}}" method="post" class="ajaxdatos">
            <div>{{form_errors(formulario)}}</div>
            <div>
                {{form_errors(formulario.nombres)}}
                {{form_widget(formulario.nombres,{attr:{'placeholder':'Nombre'}})}}
            </div>
            <div>
                {{form_errors(formulario.apellidos)}}
                {{form_widget(formulario.apellidos,{attr:{'placeholder':'Apellidos'}})}}
            </div>
            <div>
                {{form_errors(formulario.identificacion)}}
                {{form_widget(formulario.identificacion,{attr:{'placeholder':'Identificacion'}})}}
            </div>
            <div>
                {{form_label(formulario.perfil,'Perfil')}}
                {{form_errors(formulario.perfil)}}
                {{form_widget(formulario.perfil,{attr:{'placeholder':'Perfil'}})}}
            </div>
            <div>
                {{form_errors(formulario.telefono)}}
                {{form_widget(formulario.telefono,{attr:{'placeholder':'Telefono'}})}}
            </div>
            <div>
                {{form_errors(formulario.salario)}}
                {{form_widget(formulario.salario,{attr:{'placeholder':'Salario'}})}}
            </div>
            <div>
                {{form_label(formulario.activo,'Activo')}}
                {{form_errors(formulario.activo)}}
                {{form_widget(formulario.activo,{attr:{'required':'false'}})}}
            </div>
            <div>{{form_rest(formulario)}}</div>
            <br />
            <button class="btn btn-info">Registrar</button>
        </form>
    </div>
{% endblock %}