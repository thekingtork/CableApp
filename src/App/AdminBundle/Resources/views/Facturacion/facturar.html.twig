{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "::base.html.twig" %}
{% block dinamico %}
	<h1>Facturar</h1>
    <div class="container">
    {% if factura %}
        {# desactivado<div class="row">
            <div class="col col-md-4">
                Contrato: <br /> <span class="label label-info">{{factura.ncontrato}}</span><br />
                Cliente: <br /> <span class="label label-info">{{factura.nombres}} {{factura.apellidos}}</span><br />
                {{factura.tipoDocumento}} : <br /> <span class="label label-info">{{factura.documento}}</span><br />
                Direccion:<br /> <span class="label label-info">{{factura.direccion}}</span>
                
            </div>
            <div class="col col-md-4">
                Valor a pagar:<br />
                <span class="label label-info">{{factura.cuotames}}</span>
            </div>
            <div class="col col-md-4">
                <a href="#" class="btn btn-info">Generar factura</a>
            </div>
        </div>desactivado#}
        <form action="" method="post" class="">
        <div>
            {{form_errors(formulario)}}
        </div>
        <div>
            {{form_label(formulario.ncontrato,'Contrato Nro')}}
            {{form_errors(formulario.ncontrato)}}
            {{form_widget(formulario.ncontrato,{attr:{'disabled':'true'}})}}
        </div>
        <div>
            {{form_label(formulario.documento,'Tipo Documento')}}
            {{form_errors(formulario.tipoDocumento)}}
            {{form_widget(formulario.tipoDocumento,{attr:{'disabled':'true'}})}}
        </div>
        <div>
