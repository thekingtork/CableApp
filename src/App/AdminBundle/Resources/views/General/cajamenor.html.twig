{% extends app.request.isXmlHttpRequest ? "::base_ajax.html.twig" : "::base.html.twig" %}
{% block dinamico %}
    <div class="container">
        <div class="row">
            <div class="col col-md-12">
                <h1>Registros caja menor</h1>
                <table class="table table-hover">
                    <tr>
                        <td>Concepto</td>
                        <td>Valor</td>
                        <td>Nombre</td>
                        <td>Identificacion</td>
                        <td>Telefono</td>
                        <td>Fecha</td>
                    </tr>
                {% for p in registros %}
                    <tr>
                        <td>{{p.concepto}}</td>
                        <td>{{p.valor}}</td>
                        <td>{{p.nombre}}</td>
                        <td>{{p.Identificacion}}</td>
                        <td>{{p.telefono}}</td>
                        <td>{{p.fecha | date('d/m/Y')}}</td>
                {% else %}
                    <span class="label label-warning">No hay registro de proovedores</span>
                {% endfor %}
                </table>
                <br />
                <button class="btn btn-info activar">Nuevo Proovedor <span class="glyphicon glyphicon-plus"></span></button>
            </div>
            <div class="elemento" style="display: none ;">
                <h1>Nuevo registro Caja Menor</h1>
                <form action="{{path('cajam')}}" method="post" class="ajaxdatos">
                    {{form_widget(formulario)}}
                    <button class="btn btn-info">Registrar</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}