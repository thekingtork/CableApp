            {{form_errors(formulario.nombres)}}
            {{form_widget(formulario.nombres,{attr:{'disabled':'true'}})}}
        </div>
        <div>
            {{form_label(formulario.apellidos,'Apellidos')}}
            {{form_errors(formulario.apellidos)}}
